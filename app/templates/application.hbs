{{page-title "Quiz"}}

<div class="page-constraint">
  <div class="nav">
    <div class="nav__element">
      {{#if (eq this.router.currentRouteName "index")}}
        <span class="hero__link hero__link_disabled">Home</span>
      {{else}}
        <LinkTo @route="index" class="hero__link">Home</LinkTo>
      {{/if}}
    </div>
    <div class="nav__element">
      <a
        target="_blank"
        rel="noopener noreferrer"
        href="http://aviasales.ru"
        class="nav__link"
      >Back to Home</a>
    </div>
    {{#if (or this.hasResults this.hasState)}}
      <div class="nav__element nav__element_right">
        <span
          class="nav__link nav__link_reset"
          role="button"
          {{on "click" this.resetResults}}
        >Reset Game</span>
      </div>
    {{/if}}
  </div>

  {{outlet}}
</div>